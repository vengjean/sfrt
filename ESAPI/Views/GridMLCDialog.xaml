<UserControl x:Class="SFRT_PlanningScript.Views.GridMLCDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SFRT_PlanningScript.Views"
             xmlns:models="clr-namespace:SFRT_PlanningScript.Models"
             xmlns:converters="clr-namespace:SFRT_PlanningScript.Views.Converters"
             Height="580"
             Width="580">
    <UserControl.Resources>
        <converters:BoolToBlueConverter x:Key="BoolToBlue"/>
        <converters:BoolToStrikeConverter x:Key="BoolToStrike"/>
        <converters:RadiusToDiameterConverter x:Key="RadiusToDiameter"/>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical"
                Margin="0,0,0,0"
                IsEnabled="True">
        <StackPanel Orientation="Horizontal">
            <TextBlock Height="26"
                       Width="550"
                       Margin="5,5,5,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top">
                       <Bold>Required before running script:</Bold>
            </TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Height="26"
                       Width="550"
                       Margin="5,5,5,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top">
                       Make a static field with the correct beam parameters (energy, angles, iso) and <Bold>fit MLC to target</Bold>.
            </TextBlock>
        </StackPanel>

        <Separator/>

        <StackPanel Orientation="Horizontal">
            <!-- <Label Height="26"
                   Width="100"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Target"/>
            <ComboBox x:Name="TargetList"
                      ItemsSource="{Binding TargetStructures}"
                      SelectedIndex="{Binding TargetSelected}"
                      HorizontalAlignment="Left"
                      Height="26"
                      Margin="0, 10, 10, 10"
                      VerticalAlignment="Top"
                      Width="123"/> -->
            <Label Height="26"
                   Width="100"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Square size (mm)"/>
            <TextBox x:Name="squareSize"
                     Text="{Binding SquareSize}"
                     HorizontalAlignment="Left"
                     Height="26"
                     Margin="0, 10, 10, 10"
                     VerticalAlignment="Top"
                     Width="123"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Height="26"
                   Width="200"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Grid offset (fraction of Square Size)"/>
            <TextBox x:Name="Offset"
                     Text="{Binding Offset}"
                     HorizontalAlignment="Left"
                     Height="26"
                     Margin="0, 10, 10, 10"
                     VerticalAlignment="Top"
                     Width="123"/>
            <Label Height="26"
                   Width="140"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Close outermost leaves"/>
            <CheckBox x:Name="ShrinkBy1"
                      IsChecked="{Binding ShrinkBy1}"
                      HorizontalAlignment="Left"
                      Height="26"
                      Margin="0, 10, 10, 10"
                      VerticalAlignment="Top"
                      Width="123"/>
        </StackPanel>

        <!-- <StackPanel Orientation="Horizontal">
        <Label Height="26"
               Width="100"
               Margin="10,10,10,10"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="x Offset (mm)"/>
        <TextBox x:Name="XOffset"
                 Text="{Binding OffsetX}"
                 HorizontalAlignment="Left"
                 Height="26"
                 Margin="0, 10, 10, 10"
                 VerticalAlignment="Top"
                 Width="123"/>
        <Label Height="26"
               Width="100"
               Margin="10,10,10,10"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Y Offset (mm)"/>
        <TextBox x:Name="YOffset"
                 Text="{Binding OffsetY}"
                 HorizontalAlignment="Left"
                 Height="26"
                 Margin="0, 10, 10, 10"
                 VerticalAlignment="Top"
                 Width="123"/>
    </StackPanel> -->

        <StackPanel Orientation="Horizontal">
            <Button Height="26"
                    Width="130"
                    Margin="10,10,10,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Create"
                    Click="CreateGrid"/>
        </StackPanel>
    </StackPanel>
</UserControl>
